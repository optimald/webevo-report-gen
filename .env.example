# WebEvo.ai Report Generator - Environment Configuration
# Copy this file to .env and modify the values as needed

# File paths
WATCH_DIRECTORY=reports-raw
OUTPUT_DIRECTORY=reports-final
TEMPLATE_DIRECTORY=templates

# Logging
LOG_LEVEL=INFO
LOG_FILE=webevo_reports.log

# PDF Generation
PDF_FORMAT=A4
PDF_MARGIN_TOP=0.5in
PDF_MARGIN_RIGHT=0.5in
PDF_MARGIN_BOTTOM=0.5in
PDF_MARGIN_LEFT=0.5in

# Browser settings
BROWSER_TYPE=chromium
HEADLESS_MODE=true

# Performance
MAX_CONCURRENT_REPORTS=3
REPORT_TIMEOUT_SECONDS=60

# Branding
WEBEVO_LOGO_URL=https://www.webevo.ai/_next/image?url=%2Fwebevo-logo-nav-hd-large.png&w=128&q=75
BRAND_COLORS={"primary": "#3B82F6", "secondary": "#8B5CF6", "accent": "#10B981"}

# Notifications (future feature)
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
